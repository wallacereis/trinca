<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fontawesome="clr-namespace:FontAwesome"
             x:Class="ChurrasTrincaAPP.Views.Modal.SemConexaoView" Padding="0,20,0,0">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,Auto,*" RowSpacing="0" Margin="0" Padding="0">
            <!-- top controls -->
            <Image 
                Source="logo"
                Aspect="AspectFit"
                WidthRequest="128"
                HorizontalOptions="Center"
                Margin="0,20"
                Grid.Row="0"
            />
            <StackLayout
                Orientation="Vertical"
                HorizontalOptions="FillAndExpand" 
                VerticalOptions="FillAndExpand" 
                Padding="15,50,15,0" 
                Grid.Row="1"
            >
                <!-- middle controls -->
                <Label 
                    Text="{x:Static fontawesome:FontAwesomeIcons.Wifi}"
                    TextColor="LightGray"
                    FontFamily="{StaticResource FontAwesomeSolid}" 
                    FontSize="144"
                    Margin="0"
                    HorizontalTextAlignment="Center"
                />
                <Label 
                    FontSize="16"
                    Text="SEM CONEXÃO COM A INTERNET..."
                    TextColor="Black"                    
                    HorizontalTextAlignment="Center"
                />
                <Label 
                    FontSize="16"
                    Text="POR FAVOR, VERIFIQUE SUA CONEXÃO E TENTE NOVAMENTE."
                    TextColor="Black"                    
                    HorizontalTextAlignment="Center"
                    Margin="0,20"
                />
            </StackLayout>
            <!-- bottom controls -->
            <Button 
                Grid.Row="2" 
                x:Name="btnTentarNovamente"
                HeightRequest="45"
                WidthRequest="282"
                TextColor="White"
                Text="Fechar" 
                Command="{Binding TentarNovamenteCommand}" 
                CornerRadius="20" 
                BackgroundColor="#000000" 
                Padding="0"
                Margin="40"
                VerticalOptions="End"
            />
        </Grid>
    </ContentPage.Content>
</ContentPage>